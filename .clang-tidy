---
Checks:
# Enable all checks
  - '*'
# Remove oddly specific groups
  - '-altera*'
  - '-fuchsia*'
  - '-llvmlibc*'
# Remove entries that contain a given expression
  - '-*namespace-comment*'
# Remove entries ending with a given expression
  - '-*magic-numbers'
  - '-*narrowing-conversions'
# Remove individual entries
  - '-modernize-use-nodiscard'
  - '-modernize-use-trailing-return-type'
  - '-readability-math-missing-parentheses'
  - '-readability-identifier-length'
  - '-readability-use-anyofallof'
  - '-hicpp-signed-bitwise'
  - '-cppcoreguidelines-pro-type-member-init'
  - '-misc-no-recursion'
  - '-readability-simplify-boolean-expr'
  - '-llvm-include-order'
# Remove symlinked entries
  - '-cert-arr39-c'
  - '-cert-con36-c'
  - '-cert-con54-cpp'
  - '-cert-ctr56-cpp'
  - '-cert-dcl03-c'
  - '-cert-dcl16-c'
  - '-cert-dcl37-c'
  - '-cert-dcl50-cpp'
  - '-cert-dcl51-cpp'
